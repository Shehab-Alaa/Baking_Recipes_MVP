<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_weight="2">

    <android.support.v7.widget.CardView
        android:id="@+id/bakingRecipe_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@mipmap/nutellapie"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:background="#000"
                android:alpha="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutella Pie"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/bakingRecipe_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@mipmap/brownies"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="235dp"
                android:layout_height="35dp"
                android:background="#000"
                android:alpha="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brownies"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginBottom="40dp">

    <android.support.v7.widget.CardView
        android:id="@+id/bakingRecipe_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@mipmap/yellowcake"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="#000"
                android:alpha="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow Cake"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/bakingRecipe_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@mipmap/cheesecake"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="#000"
                android:alpha="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cheese Cake"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>